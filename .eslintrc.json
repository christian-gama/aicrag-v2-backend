{
  "extends": ["plugin:jest-formatting/strict", "plugin:jest/all", "plugin:mongodb/all", "standard-with-typescript"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": ["import-helpers", "jest-formatting", "jest", "mongodb"],
  "rules": {
    "@typescript-eslint/no-misused-promises": "off",
    "@typescript-eslint/strict-boolean-expressions": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "/^@/domain/",
          "/^@/application/",
          "/^@/infra/",
          "/^@/presentation/",
          "/^@/main/",
          "/^@/factories/",
          "/^@/tests/",
          ["parent", "sibling", "index"],
          "module"
        ],
        "alphabetize": { "order": "asc", "ignoreCase": true }
      }
    ],
    "jest-formatting/padding-around-describe-blocks": 2,
    "jest/require-top-level-describe": "off",
    "jest-formatting/padding-around-test-blocks": 2,
    "jest/no-hooks": "off",
    "jest/require-hook": "off",
    "jest/no-done-callback": "off",
    "jest/no-mocks-import": "off",
    "sort-keys": ["warn", "asc", { "caseSensitive": true, "natural": false, "minKeys": 2 }],
    "sort-vars": ["warn", { "ignoreCase": true }]
  }
}
