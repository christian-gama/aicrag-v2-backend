{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "target": "ES2020",
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@tests/*": ["../tests/*"],
      "@domain/*": ["./domain/*"],
      "@application/*": ["./application/*"],
      "@infraestructure/*": ["./infraestructure/*"],
      "@main/*": ["./main/*"],
      "@persitence/*": ["./persitence/*"],
      "@presentation/*": ["./presentation/*"],
      "@root/*": ["*"]
    }
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
