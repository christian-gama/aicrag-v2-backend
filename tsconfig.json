{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/domain/*": ["./domain/*"],
      "@/application/*": ["./application/*"],
      "@/infra/*": ["./infra/*"],
      "@/main/*": ["./main/*"],
      "@/presentation/*": ["./presentation/*"],
      "@/*": ["*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
