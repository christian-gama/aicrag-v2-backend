{
  "name": "backend",
  "version": "1.6.0",
  "main": "index.js",
  "author": "Christian Gama <christiangama.dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main/vendors/express/server.js",
    "build": "rimraf dist && tsc -p tsconfig.build.json && yarn copy-assets",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/vendors/express/server.js",
    "copy-assets": "copyfiles -u 1 src/**/*.pug dist/",
    "tsc:watch": "tsc -w -p tsconfig.build.json && yarn copy-assets",
    "up": "yarn tsc:build && docker-compose up -d",
    "down": "docker-compose down",
    "test": "yarn test:unit && yarn test:integration",
    "test:silent": "jest --passWithNoTests --silent --noStackTrace",
    "test:verbose": "jest --passWithNoTests --detectOpenHandles --maxWorkers=1",
    "test:unit": "yarn test:silent -c jest-unit-config.js --maxWorkers=6",
    "test:integration": "yarn test:silent -c jest-integration-config.js --maxWorkers=1",
    "test:ci": "jest --clearCache && yarn test:verbose --coverage"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.4",
    "@babel/core": "^7.15.5",
    "@babel/node": "^7.15.4",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@shelf/jest-mongodb": "^2.0.3",
    "@types/babel__core": "^7.1.16",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/faker": "^5.5.8",
    "@types/html-to-text": "^8.0.1",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.7.10",
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-sendgrid": "^1.0.0",
    "@types/pug": "^2.0.5",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.6.3",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "faker": "^5.5.3",
    "husky": "^7.0.2",
    "jest": "^27.1.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.2"
  },
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "html-to-text": "^8.0.0",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "mongodb": "^4.1.1",
    "nodemailer": "^6.6.3",
    "nodemailer-sendgrid": "^1.0.3",
    "nodemon": "^2.0.12",
    "pug": "^3.0.2",
    "validator": "^13.6.0"
  },
  "_moduleAliases": {
    "@": "dist"
  }
}
