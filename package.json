{
  "name": "backend",
  "version": "3.2.0",
  "main": "index.js",
  "author": "Christian Gama <christiangama.dev@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && yarn copy-assets",
    "codegen:watch": "rimraf src/main/graphql/generated && graphql-codegen --watch",
    "codegen": "rimraf src/main/graphql/generated && graphql-codegen",
    "copy-assets": "copyfiles -u 1 src/**/*.pug dist/ && copyfiles -u 1 src/**/*.graphql dist/",
    "dev:docker": "cross-env MONGO_URL=mongodb://mongo/aicrag nodemon -L -e '*' --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/express/server.js",
    "dev:local": "cross-env PORT=8000 MONGO_URL=mongodb://localhost:27017/aicrag nodemon -e '*' --watch ./dist --inspect --nolazy ./dist/main/express/server.js",
    "docker:down": "docker-compose down",
    "docker:restart": "yarn build && docker-compose restart api",
    "docker:up": "yarn build && docker-compose up -d",
    "start": "node dist/main/express/server.js",
    "test:ci": "jest --clearCache && yarn test:silent --coverage",
    "test:coveralls": "yarn test:ci && coveralls < coverage/lcov.info",
    "test:integration": "yarn test:silent -c jest-integration-config.js",
    "test:silent": "jest --passWithNoTests --silent --noStackTrace",
    "test:unit": "yarn test:silent -c jest-unit-config.js",
    "test:verbose": "jest --passWithNoTests --detectOpenHandles",
    "test": "yarn test:unit && yarn test:integration",
    "tsc:watch": "tsc -w -p tsconfig.build.json && yarn copy-assets",
    "graphql:diff": "graphql diff",
    "graphql:similar": "graphql similar",
    "format": "prettier --write . && eslint . --fix"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
